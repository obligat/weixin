
<!--index.wxml-->
<view>
  <view class="slide">
    <swiper indicator-dots="true" autoplay="true" interval="5000" duration="1000">
      <block wx:for="{{imgUrls}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" mode="aspectFill" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <view class="board">
    <view class="board-title">
      <text>豆瓣电影榜单集合\n</text>
      <text>最新、最牛的影视信息收集~</text>
    </view>
    <navigator url="../list/list?type=in_theaters&title=正在热映">
      <view class="board-item">
        <text>正在热映</text>
        <image src="../images/arrowright.png" mode="aspectFill" />
      </view>
    </navigator>
    <navigator url="../list/list?type=coming_soon&title=即将上映">
      <view class="board-item">
        <text>即将上映</text>
        <image src="../images/arrowright.png" mode="aspectFill" />
      </view>
    </navigator>
    <navigator url="../list/list?type=top250&title=Top250">
      <view class="board-item">
        <text>Top250</text>
        <image src="../images/arrowright.png" mode="aspectFill" />
      </view>
    </navigator>
  </view>
</view>